<div>
	<strong><p>From: <%= comment.name %></p></strong>
	<p><%= comment.body %></p>
	<p><%=time_ago_in_words(comment.created_at)%> Ago</p><hr>
	<% if user_signed_in? %>
	<p><%=link_to"Delete", [comment.blog, comment], method: :delete, class: "button", data: {confirm: "Are you sure?" } %></p>
	<%end%>
</div>

